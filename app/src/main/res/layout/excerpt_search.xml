<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dd"
    android:orientation="vertical" >
    
	<RelativeLayout
        android:id="@+id/relativeLayout0"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/top" >

        <ImageView
            android:id="@+id/excerpt_search_epen"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:src="@drawable/epen"
            android:contentDescription="@string/description" />

        <ImageButton
            android:id="@+id/excerpt_search_back"
            android:layout_width="60dp"
            android:layout_height="31dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/back"
            android:contentDescription="@string/description" />

        <ImageButton
            android:id="@+id/excerpt_search_home"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/shouye"
            android:contentDescription="@string/description" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/relativeLayout0"
        android:background="@drawable/ss" >
        
        <LinearLayout 
            android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:layout_marginLeft="20dp"
        	android:layout_marginRight="20dp"
        	android:gravity="center_vertical"
        	android:orientation="horizontal">
            
            <ImageView
	            android:id="@+id/excerpt_search_search"
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:layout_weight="1"
	            android:src="@drawable/s"
	            android:contentDescription="@string/description"/>

	        <EditText
	            android:id="@+id/excerpt_search_text"
	            android:layout_width="100dp"
	            android:layout_height="20dp"
	            android:layout_weight="8"
	            android:hint="@string/search"
	            android:textColor="@color/gray"
	            android:background="@null"
	            android:textSize="15sp"
	            android:inputType="text" >
        	</EditText>
        
	        <ImageView
	            android:id="@+id/excerpt_search_clear"
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:layout_weight="1"
	            android:src="@drawable/t"
	            android:contentDescription="@string/description"/>
        </LinearLayout>

	</RelativeLayout>
	
</RelativeLayout>