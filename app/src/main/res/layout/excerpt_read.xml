<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dd"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/relativeLayout0"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/top" >

        <ImageView
            android:id="@+id/excerpt_read_epen"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/description"
            android:src="@drawable/epen" />

        <ImageButton
            android:id="@+id/excerpt_read_back"
            android:layout_width="60dp"
            android:layout_height="31dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/back"
            android:contentDescription="@string/description" />

        <ImageButton
            android:id="@+id/excerpt_read_home"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/shouye"
            android:contentDescription="@string/description" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/body"
        android:layout_below="@+id/relativeLayout0"
        android:layout_above="@+id/linearLayout0"
        android:background="@drawable/xx" >

        <TextView
            android:id="@+id/excerpt_read_title"
            android:layout_width="fill_parent"
            android:layout_height="28dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text=""
            android:textSize="20sp" />

        <ScrollView
            android:id="@+id/excerpt_read_scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
	        android:layout_below="@+id/excerpt_read_title"
	        android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp" >
            
	        <TextView
	            android:id="@+id/excerpt_read_content"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:text="" />
        
        </ScrollView>

    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout0"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/erb_create"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:contentDescription="@string/description"
            android:src="@drawable/create" />
        
        <ImageView
            android:id="@+id/erb_edit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:contentDescription="@string/description"
            android:src="@drawable/edit" />
        
        <ImageView
            android:id="@+id/erb_search"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/search"
            android:contentDescription="@string/description" />

        <ImageView
            android:id="@+id/erb_share"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/share"
            android:contentDescription="@string/description" />



	</LinearLayout>

</RelativeLayout>