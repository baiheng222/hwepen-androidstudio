<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F1F1F1"
    android:orientation="vertical" >
   
    <include layout="@layout/rgst_user_title" />

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="70dip"
        android:gravity="center"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/register_phone_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/register_phone"/> 
            <ImageView
                android:id="@+id/register_email_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/email_register_nor"/> 
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dip"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:orientation="horizontal">
		 <com.hanvon.util.ClearEditText
                android:id="@+id/rgst_user"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:background="#FFFFFF"
                android:hint="@string/rgst_phone_user"
                android:singleLine="true"
                android:drawableRight="@drawable/login_skip"
                android:inputType="phone"
                android:textColor="#D7D7D7"
                android:textColorHint="#D7D7D7"
                android:textSize="15sp" 
                android:imeOptions="actionNext" >
            </com.hanvon.util.ClearEditText>
       </LinearLayout>
       <LinearLayout 
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dip"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:orientation="horizontal">
            <com.hanvon.util.ClearEditText
                android:id="@+id/rgst_pswd"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:hint="@string/rgst_pwd"
                android:background="#FFFFFF"
                android:inputType="textPassword"
                android:singleLine="true"
                android:maxLength="16"
                android:textColor="#D7D7D7"
                android:textColorHint="#D7D7D7"
                android:drawableRight="@drawable/login_skip"
                android:textSize="15sp" 
                android:imeOptions="actionDone">
            </com.hanvon.util.ClearEditText>
           </LinearLayout>
            <Button
                android:id="@+id/rgst_rgstbutton"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="250dip"
                android:background="@drawable/get_authcode" />

</RelativeLayout>